# Google OAuth Configuration
# Using JSON client secrets file
GOOGLE_CLIENT_SECRETS_FILE=/path/to/your/client_secret.json
TEST_EMAIL_ADDRESS=your-test@example.com
PHOTO_TEST_EMAIL_ADDRESS=your-photo-test@example.com
TEST_CHAT_WEBHOOK=your-chat-webhook-url

# OAuth Callback Configuration
OAUTH_REDIRECT_URI=https://localhost:8002/oauth/callback

# HTTPS Configuration (for secure connections)
ENABLE_HTTPS=true
SSL_CERT_FILE=./localhost+2.pem
SSL_KEY_FILE=./localhost+2-key.pem

# OAuth Base URL (matches HTTPS configuration)
OAUTH_BASE_URL=https://localhost:8002

#CHAT
CHAT_SERVICE_ACCOUNT_FILE=/path/to/chat-service-account.json

GMAIL_ALLOW_LIST=user1@example.com,user2@example.com

# Server Configuration
SERVER_PORT=8002
SERVER_HOST=localhost
SERVER_NAME=Google Drive Upload Server

QDRANT_URL=http://localhost:6333
QDRANT_KEY=NONE

# Storage Configuration
CREDENTIAL_STORAGE_MODE=FILE_PLAINTEXT
CREDENTIALS_DIR=./credentials

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
SESSION_TIMEOUT_MINUTES=60

# Phase 1 OAuth Migration Feature Flags
ENABLE_UNIFIED_AUTH=false
LEGACY_COMPAT_MODE=true
CREDENTIAL_MIGRATION=false
SERVICE_CACHING=false
ENHANCED_LOGGING=false
FASTMCP_SERVER_AUTH=

# Phase 1 Feature Flags (additional)
PHASE1_ENABLE_FASTMCP_PROVIDER=true
PHASE1_DUAL_FLOW_MODE=true
PHASE1_FASTMCP_PRIMARY=false

# FastMCP GoogleProvider OAuth credentials
FASTMCP_SERVER_AUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
FASTMCP_SERVER_AUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
FASTMCP_SERVER_AUTH_GOOGLE_BASE_URL=https://localhost:8002