            background: linear-gradient(135deg, #1e40af 0%, #3730a3 100%);
            color: white;
            padding: 60px;
            border-radius: 15px;
            margin-bottom: 40px;
            text-align: center;
        }
        .proposal-cover h1 {
            font-size: 42px;
            margin: 0 0 20px 0;
            font-weight: 300;
            letter-spacing: -1px;
        }
        .proposal-meta {
            font-size: 18px;
            opacity: 0.95;
        }
        .section {
            margin: 40px 0;
            page-break-inside: avoid;
        }
        .section h2 {
            color: #1e40af;
            font-size: 28px;
            margin: 0 0 20px 0;
            padding-bottom: 10px;
            border-bottom: 2px solid #e0e7ff;
        }
        .executive-summary {
            background: #f0f9ff;
            padding: 30px;
            border-radius: 10px;
            font-size: 16px;
            margin: 30px 0;
        }
        .scope-list {
            list-style: none;
            padding: 0;
        }
        .scope-item {
            background: white;
            border: 1px solid #e0e7ff;
            padding: 15px;
            margin: 10px 0;
            border-radius: 8px;
            border-left: 4px solid #1e40af;
        }
        .timeline-phase {
            background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
            padding: 20px;
            margin: 15px 0;
            border-radius: 10px;
        }
        .timeline-phase h3 {
            color: #1f2937;
            margin: 0 0 10px 0;
        }
        .budget-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        .budget-table th {
            background: #1e40af;
            color: white;
            padding: 12px;
            text-align: left;
        }
        .budget-table td {
            padding: 12px;
            border-bottom: 1px solid #e5e7eb;
        }
        .budget-total {
            background: #fef2f2;
            font-weight: bold;
            font-size: 18px;
        }
        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }
        .team-member {
            background: white;
            border: 1px solid #e0e7ff;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }
        .team-member h4 {
            color: #1e40af;
            margin: 0 0 5px 0;
        }
        .team-role {
            color: #6b7280;
            font-size: 14px;
            margin-bottom: 10px;
        }
        .benefit {
            background: #ecfdf5;
            border-left: 4px solid #10b981;
            padding: 12px 15px;
            margin: 10px 0;
            border-radius: 6px;
        }
        .risk-item {
            background: #fef2f2;
            border: 1px solid #fecaca;
            padding: 15px;
            margin: 12px 0;
            border-radius: 8px;
        }
        .risk-title {
            color: #dc2626;
            font-weight: bold;
            margin-bottom: 8px;
        }
        .terms-section {
            background: #f9fafb;
            padding: 25px;
            border-radius: 10px;
            font-size: 14px;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <div class="proposal-cover">
        <h1>{{ proposal_title }}</h1>
        <div class="proposal-meta">
            <p><strong>Prepared for:</strong> {{ client_name }}</p>
            <p><strong>Date:</strong> {{ date or now().strftime('%B %d, %Y') }}</p>
            {% if company_info.name %}
            <p><strong>Prepared by:</strong> {{ company_info.name }}</p>
            {% endif %}
        </div>
    </div>
    
    {% if executive_summary %}
    <div class="executive-summary">
        <h2 style="color: #1e40af; margin-top: 0;">Executive Summary</h2>
        <p>{{ executive_summary }}</p>
    </div>
    {% endif %}
    
    {% if problem_statement %}
    <div class="section">
        <h2>Problem Statement</h2>
        <p>{{ problem_statement }}</p>
    </div>
    {% endif %}
    
    {% if proposed_solution %}
    <div class="section">
        <h2>Proposed Solution</h2>
        <p>{{ proposed_solution }}</p>
    </div>
    {% endif %}
    
    {% if scope_items %}
    <div class="section">
        <h2>Project Scope</h2>
        <ul class="scope-list">
            {% for item in scope_items %}
            <li class="scope-item">‚úì {{ item }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
    
    {% if timeline_phases %}
    <div class="section">
        <h2>Project Timeline</h2>
        {% for phase in timeline_phases %}
        <div class="timeline-phase">
            <h3>Phase {{ loop.index }}: {{ phase.phase }}</h3>
            <p><strong>Duration:</strong> {{ phase.duration }}</p>
            {% if phase.deliverables %}
            <p><strong>Deliverables:</strong> {{ phase.deliverables }}</p>
            {% endif %}
        </div>
        {% endfor %}
    </div>
    {% endif %}
    
    {% if budget_items %}
    <div class="section">
        <h2>Project Budget</h2>
        <table class="budget-table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Description</th>
                    <th style="text-align: right;">Cost</th>
                </tr>
            </thead>
            <tbody>
                {% set total_cost = namespace(value=0) %}
                {% for item in budget_items %}
                <tr>
                    <td><strong>{{ item.item }}</strong></td>
                    <td>{{ item.description or '-' }}</td>
                    <td style="text-align: right;">${{ "%.2f" | format(item.cost) }}</td>
                </tr>
                {% set total_cost.value = total_cost.value + item.cost %}
                {% endfor %}
                <tr class="budget-total">
                    <td colspan="2">Total Project Cost</td>
                    <td style="text-align: right;">${{ "%.2f" | format(total_cost.value) }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    {% endif %}
    
    {% if team_members %}
    <div class="section">
        <h2>Project Team</h2>
        <div class="team-grid">
            {% for member in team_members %}
            <div class="team-member">
                <h4>{{ member.name }}</h4>
                <div class="team-role">{{ member.role }}</div>
                {% if member.expertise %}
                <p style="font-size: 14px; color: #6b7280;">{{ member.expertise }}</p>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
    
    {% if benefits %}
    <div class="section">
        <h2>Expected Benefits</h2>
        {% for benefit in benefits %}
        <div class="benefit">{{ benefit }}</div>
        {% endfor %}
    </div>
    {% endif %}
    
    {% if risks %}
    <div class="section">
        <h2>Risk Assessment</h2>
        {% for risk in risks %}
        <div class="risk-item">
            <div class="risk-title">‚ö†Ô∏è {{ risk.risk }}</div>
            <div><strong>Mitigation:</strong> {{ risk.mitigation }}</div>
        </div>
        {% endfor %}
    </div>
    {% endif %}
    
    {% if terms %}
    <div class="terms-section">
        <h3>Terms & Conditions</h3>
        <p>{{ terms }}</p>
    </div>
    {% endif %}
    
    <div style="margin-top: 50px; text-align: center; color: #6b7280; font-size: 14px;">
        <p>{{ company_info.name or 'Your Company' }}</p>
        {% if company_info.email %}
        <p>{{ company_info.email }} | {{ company_info.phone or '' }}</p>
        {% endif %}
        <p style="margin-top: 20px; font-size: 12px;">
            Generated with FastMCP Proposal Template System
        </p>
    </div>
</body>
</html>
{% endmacro %}