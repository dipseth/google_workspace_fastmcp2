    - executive_summary: Brief summary of the proposal
    - problem_statement: Description of the problem being solved
    - proposed_solution: Detailed solution description
    - scope_items: List of project scope items
    - timeline_phases: List of dicts with 'phase', 'duration', 'deliverables'
    - budget_items: List of dicts with 'item', 'cost', 'description'
    - team_members: List of dicts with 'name', 'role', 'expertise'
    - benefits: List of expected benefits
    - risks: List of dicts with 'risk', 'mitigation'
    - terms: Terms and conditions
    - company_info: Dict with company details
#}
<!DOCTYPE html>
